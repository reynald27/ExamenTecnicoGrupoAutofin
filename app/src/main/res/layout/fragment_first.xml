<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentFirst">

    <RelativeLayout
        android:id="@+id/relativeLayFragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lenearLayMainMenu"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >


        <TextView
            android:id="@+id/textVTituloPagina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Toma una foto"
            android:textColor="@color/autfn_silver_2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonEncenderCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textVTituloPagina"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/autfn_navy_blue_1"
            android:textColor="@color/white"
            android:text="Encender Camara"
            android:layout_centerHorizontal="true"
            />


        <ImageView
            android:id="@+id/imageVFotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonEncenderCamara"
            android:layout_marginTop="10dp"
            android:src="@color/black"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</FrameLayout>